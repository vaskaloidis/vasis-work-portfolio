<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<h3>Enabled Posts</h3>
<table class="table table-striped">
	<thead>
	<tr>
		<th>Name</th>
		<th>Categories</th>
		<th>Display</th>
		<th>Markdown</th>
		<th></th>
		<th></th>
    <th></th>
  </tr>
	</thead>

	<tbody>
    <% @projectsEnabled.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.categories %></td>
          <td><%= project.displayed %></td>
					<td><%= project.markdown %>
	        <td><%= link_to 'View', project_path(project) %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
	</tbody>
</table>

<h3>Disabled Posts</h3>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Categories</th>
    <th>Modified</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @projectsDisabled.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.categories %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
