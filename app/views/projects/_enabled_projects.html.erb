<h1>Projects</h1>
<h3>Enabled Projects</h3>
<table class="table table-striped">
	<thead>
	<tr>
		<th>Name</th>
		<th>Categories</th>
		<th>Display</th>
		<th>Markdown</th>
		<th></th>
		<th></th>
    <th></th>
  </tr>
	</thead>

	<tbody>
    <% @projectsEnabled.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.categories %></td>
          <td><%= project.displayed %></td>
					<td><%= project.markdown %>
	        <td><%= link_to 'View', project_path(project) %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
	</tbody>
</table>


