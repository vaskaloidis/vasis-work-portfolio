<div id="render_project_markdown_<%= project.id.to_s %>">
	<%= project.content.html_safe %>
</div>

<% if project.markdown %>
	<script>
		var markedOptions = {};
		markedOptions.breaks = true;
		// marked.setOptions(markedOptions);
		var preview_window = $('#render_project_markdown_<%= project.id.to_s %>');
		preview_window.html(marked(preview_window.html()));
	</script>
<% end %>
