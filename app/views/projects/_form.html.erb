    </div>

    <div class="field">
        <%= f.label :categories %>
        <%= f.text_area :categories %>
    </div>

    <div class="field">
        <%= f.label :order %>
        <%= f.number_field :order %>
    </div>

    <div class="field">
        <%= f.label :displayed %>
        <%= f.check_box :displayed %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
