<div class="container">
	
	<%= bootstrap_form_for(article) do |f| %>
			<%= f.error_notification %>
			
			<div class="form-inputs">
				<%= f.input :name %>
				<%= f.input :content %>
				<%= f.input :excerpt %>
				<%= f.input :categories %>
			</div>
			
			<div class="field">
				<%= f.check_box :markdown %>
			</div>
			
			<div class="form-actions">
				<%= f.button :submit %>
			</div>
	<% end %>

</div>